<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:visibility="visible"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/layout_main_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_floatar" />

    <Button
        android:id="@+id/layout_main_button_singleplayer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/single_player"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/layout_main_button_multiplayer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/multi_player"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/layout_main_button_exit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/exit_game"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>