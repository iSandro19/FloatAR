<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:visibility="visible"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/layout_main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:srcCompat="@drawable/ic_launcher_floatar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/layout_main_button_singleplayer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/single_player" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/layout_main_button_multiplayer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/multi_player" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <Button
        android:id="@+id/layout_main_button_exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/exit_game" />
</LinearLayout>